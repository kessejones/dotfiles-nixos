{...}: let
  dp_id = "";

  hdmi_id = "";
in {
  services.autorandr = {
    enable = true;
    defaultTarget = "desktop-setup-1";
    profiles = {
      "desktop-setup-1" = {
        fingerprint = {
          "DP-0" = dp_id;
          "HDMI-0" = hdmi_id;
        };
        config = {
          "DP-0" = {
            enable = true;
            position = "0x0";
            mode = "1920x1080";
            rate = "165.0";
          };
          "HDMI-0" = {
            enable = true;
            primary = true;
            position = "1920x0";
            mode = "1920x1080";
          };
        };
      };
      "desktop-setup-2" = {
        fingerprint = {
          "HDMI-0" = hdmi_id;
        };
        config = {
          "HDMI-0" = {
            enable = true;
            primary = true;
            position = "0x0";
            mode = "1920x1080";
          };
        };
      };
      "desktop-setup-3" = {
        fingerprint = {
          "DP-0" = dp_id;
        };
        config = {
          "DP-0" = {
            enable = true;
            primary = true;
            position = "0x0";
            mode = "1920x1080";
            rate = "165.0";
          };
        };
      };
    };
  };
}
